{
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "dev:docs": "turbo run dev --filter=!./apps/web",
    "dev:web": "turbo run dev --filter=!./apps/docs",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "publish-packages": "turbo run build --filter=!./apps/* && changeset publish",
    "prepare": "husky install",
    "commit": "cz",
    "commit-lint": "node --no-warnings --loader tsx ./node_modules/@commitlint/cli/cli.js",
    "gh-build": "turbo run build --filter=!./apps/web"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "@types/node": "^17.0.12",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.48.0",
    "husky": "^8.0.0",
    "prettier": "^3.0.2",
    "tsx": "^4.1.4",
    "turbo": "1.10.4"
  },
  "packageManager": "pnpm@8.6.10",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "name": "@d-kja/e-commerce",
  "homepage": "http://d-kja.github.io/e-commerce"
}
