{
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --filter=!./apps/web",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "publish-packages": "turbo run build --filter=!./apps/* && changeset publish"
  },
  "devDependencies": {
    "eslint": "^8.48.0",
    "prettier": "^3.0.2",
    "turbo": "latest"
  },
  "packageManager": "pnpm@8.6.10",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "name": "@d-kja/e-commerce"
}
